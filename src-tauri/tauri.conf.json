{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "VoKey Transcribe",
  "version": "0.2.0-dev",
  "identifier": "com.vokey.transcribe",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "hud",
        "title": "VoKey",
        "width": 320,
        "height": 80,
        "minWidth": 320,
        "minHeight": 80,
        "x": 20,
        "y": 20,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "skipTaskbar": true,
        "visible": true
      },
      {
        "label": "settings",
        "title": "VoKey Settings",
        "url": "index.html?window=settings",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "decorations": false,
        "alwaysOnTop": false,
        "visible": false
      },
      {
        "label": "debug",
        "title": "VoKey Debug",
        "url": "index.html?window=debug",
        "width": 450,
        "height": 700,
        "resizable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "visible": false
      }
    ],
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": false
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://api.openai.com wss://api.openai.com; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
